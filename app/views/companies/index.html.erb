<p style="color: green"><%= notice %></p>

<h1>Companies</h1>

<%= link_to "New company", new_company_path, class: "btn btn-primary" %>

<div id="companies">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Owner</th>
          <th scope="col">Address</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.owner %></td>
            <td><%= company.address %></td>
            <td><%= company.email %></td>
            <td><%= link_to "Show", company_path(company), class: "btn btn-primary" %></td>
            <td><%= link_to "Edit", edit_company_path(company), class: "btn btn-secondary" %></td>
            <td><%= link_to "Delete", company_path(company), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>