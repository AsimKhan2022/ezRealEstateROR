<div class="nested-fields">
  <div class="row">
    <div class="col">
      <%= f.label :name, style: "display: block" %>
      <%= f.text_field :name %>
    </div>

    <div class="col">
      <%= f.label :type, style: "display: block" %>
      <%= f.text_field :amenity_type %>
    </div>

    <div class="col">
      <%= f.label :capacity, style: "display: block" %>
      <%= f.text_field :capacity %>
    </div>

    <div class="col">
      <%= f.label :image_logo, style: "display: block" %>
      <%= f.file_field :image_logo %>
        
      <!-- Display the existing image if it's attached -->
      <% if f.object.image_logo.attached? %>
        <div class="existing-image">
          <%= image_tag f.object.image_logo, alt: "Amenity Image", class: "img-thumbnail", style: "max-width: 150px;" %>
          <%= check_box_tag "remove_image_logo_#{f.object.object_id}", "true", false %>
          <%= label_tag "remove_image_logo_#{f.object.object_id}", "Remove Image" %>
        </div>
      <% end %>
    </div>

    <%= link_to_remove_association 'Remove Amenity', f, class: 'btn btn-danger mt-2' %>  
  </div>
</div>