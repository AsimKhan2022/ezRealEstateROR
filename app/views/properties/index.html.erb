<p style="color: green"><%= notice %></p>

<h1>Properties</h1>

<%= link_to "New property", new_property_path, class: "btn btn-primary" %>

<div id="properties">
  <% if @properties.any? %>
    <div class="container mt-4">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th scope="col">Owner</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Country</th>
            <th scope="col">Admin</th>
          </tr>
        </thead>
        <tbody>
          <% @properties.each do |property| %>
          <tr>
            <td><%= property.name %></td>
            <td><%= property.address %></td>
            <td><%= property.city %></td>
            <td><%= property.state %></td>
            <td><%= property.country %></td>
            <td><%= property.admin_id %></td>
            <td><%= link_to "Show", property_path(property), class: "btn btn-primary" %></td>
            <td><%= link_to "Edit", edit_property_path(property), class: "btn btn-secondary" %></td>
            <td><%= link_to "Delete", property_path(property), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
     <p>No properties found.</p>
  <% end %>
</div>