<p style="color: green"><%= notice %></p>

<h1>Sales</h1>

<%= link_to "New sale", new_sale_path, class: "btn btn-primary" %>

<div id="sales">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Admin</th>
          <th scope="col">Lead</th>
          <th scope="col">Buyer</th>
          <th scope="col">Seller</th>
          <th scope="col">Sale Date</th>
        </tr>
      </thead>
      <tbody>
        <% @sales.each do |sale| %>
        <tr>
          <td>
            <%= sale.admin_id %>
          </td>
          <td>
            <%= sale.lead_id %>
          </td>
          <td>
            <%= sale.buyer_id %>
          </td>
          <td>
            <%= sale.seller_id %>
          </td>
          <td>
            <%= sale.sale_date %>
          </td>
          <td>
            <%= link_to "Show", sale_path(sale), class: "btn btn-primary" %>
          </td>
          <td>
            <%= link_to "Edit", edit_sale_path(sale), class: "btn btn-secondary" %>
          </td>
          <td>
            <%= link_to "Delete", sale_path(sale), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
