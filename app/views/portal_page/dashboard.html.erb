<h1>PortalPage#dashboard</h1>
<p>Find me in app/views/portal_page/dashboard.html.erb</p>

<% if @admin %>
  <% if @subscription_expired %>
    <p>
  Your subscription has expired. Please <%= link_to 'subscribe', new_subscription_path %> to continue using the service.
</p>
<% elsif @subscription_expiring_soon %>
    <p>
  Your subscription is expiring soon. Please <%= link_to 'renew', renew_subscriptions_path %> your subscription.
</p>
<% elsif @admin.trial_active? %>
    <p>
  You are on a trial period that ends on <%= @admin.trial_start_date + 7.days %>.
</p>
<%= link_to 'Subscribe Now', new_subscription_path %>
<% elsif @admin.subscription_active? %>
    <p>
  Your subscription is active and will expire on <%= @admin.subscription_end_date %>.
</p>
<% end %>
<% else %>
  <p>
  <%= link_to 'Subscribe Now', new_subscription_path %> to start using the service. 
</p>
<% end %>
