<p style="color: green"><%= notice %></p>

<h1>Assignments</h1>

<%= link_to "New assignment", new_assignment_path, class: "btn btn-primary" %>

<div id="assignments">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Company</th>
          <th scope="col">User</th>
          <th scope="col">Seller</th>
          <th scope="col">Property</th>
          <th scope="col">Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @assignments.each do |assignment| %>
          <tr>
            <td><%= assignment.title %></td>
            <td><%= assignment.company_id %></td>
            <td><%= assignment.user_id %></td>
            <td><%= assignment.seller_id %></td>
            <td><%= assignment.property_id %></td>
            <td><%= assignment.admin_id %></td>
            <td><%= link_to "Show", assignment_path(assignment), class: "btn btn-primary" %></td>
            <td><%= link_to "Edit", edit_assignment_path(assignment), class: "btn btn-secondary" %></td>
            <td><%= link_to "Delete", assignment_path(assignment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>