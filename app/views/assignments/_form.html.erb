<%= form_with(model: @assignment) do |form| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
        <% assignment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :company_id %>
    <%= form.collection_select :company_id, @companies, :id, :name, prompt: "Select Company" %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, @users, :id, :name, prompt: "Select User" %>
  </div>

  <div class="field">
    <%= form.label :seller_id %>
    <%= form.collection_select :seller_id, @sellers, :id, :name, prompt: "Select Seller" %>
  </div>

  <div class="field">
    <%= form.label :property_id %>
    <%= form.collection_select :property_id, @properties, :id, :name, prompt: "Select Property" %>
  </div>

  <div class="field">
    <%= form.label :admin_id, style: "display: block" %>
    <%= form.text_field :admin_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
