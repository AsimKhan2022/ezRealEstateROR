<p style="color: green"><%= notice %></p>

<h1>Buyers</h1>

<%= link_to "New buyer", new_buyer_path, class: "btn btn-primary" %>

<div id="buyers">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col">Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @buyers.each do |buyer| %>
          <tr>
            <td><%= buyer.name %></td>
            <td><%= buyer.email %></td>
            <td><%= buyer.mobile %></td>
            <td><%= buyer.admin_id %></td>
            <td><%= link_to "Show", buyer_path(buyer), class: "btn btn-primary" %></td>
            <td><%= link_to "Edit", edit_buyer_path(buyer), class: "btn btn-secondary" %></td>
            <td><%= link_to "Delete", buyer_path(buyer), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

