
<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= link_to "New article", new_article_path, class: "btn btn-primary" %>

<div id="articles">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Story</th>
          <th scope="col">Headlines</th>
          <th scope="col">Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td>
            <%= article.title %>
          </td>
          <td>
            <%= article.story %>
          </td>
          <td>
            <%= article.headlines %>
          </td>
          <td>
            <%= article.admin_id %>
          </td>
          <td>
            <%= link_to "Show", article_path(article), class: "btn btn-primary" %>
          </td>
          <td>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary" %>
          </td>
          <td>
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>