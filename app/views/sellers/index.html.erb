<p style="color: green"><%= notice %></p>

<h1>Sellers</h1>

<%= link_to "New seller", new_seller_path, class: "btn btn-primary" %>

<div id="sellers">
  <div class="container mt-4">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col">Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @sellers.each do |seller| %>
          <tr>
            <td><%= seller.name %></td>
            <td><%= seller.email %></td>
            <td><%= seller.mobile %></td>
            <td><%= seller.admin_id %></td>
            <td><%= link_to "Show", seller_path(seller), class: "btn btn-primary" %></td>
            <td><%= link_to "Edit", edit_seller_path(seller), class: "btn btn-secondary" %></td>
            <td><%= link_to "Delete", seller_path(seller), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
          </tr>
       <% end %>
      </tbody>
    </table>
  </div
</div>