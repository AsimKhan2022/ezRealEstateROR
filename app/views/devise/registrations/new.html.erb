<%= render 'devise/shared/real_estate_layout' do %>
        <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row mb-3">
        <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
      </div>

      <div class="row mb-3">
        <%= f.label :username, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control" %>
          </div>
      </div>

      <div class="row mb-3">
        <%= f.label :avatar, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.file_field :avatar, class: "form-control" %>
         </div>
      </div>

      <div class="row mb-3">
        <%= f.label :telephone, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.text_field :telephone, class: "form-control" %>
          </div>
      </div>

      <div class="row mb-3">
        <%= f.label :mobile_phone, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-10">
            <%= f.text_field :mobile_phone, class: "form-control" %>
            </div>
      </div>

      <div class="row mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <% if @minimum_password_length %>
            <em>
              (<%= @minimum_password_length %> characters minimum)
            </em>
          <% end %><br />
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
<% end %>